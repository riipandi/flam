{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Flam",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "fs": {
                "writeFile": true
            },
            "shell": {
                "execute": true
            },
            "dialog": {
                "save": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "Copyright Â© Aris Ripandi",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.getflam.app",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "webviewInstallMode": {
                    "type": "offlineInstaller"
                },
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "label": "main",
                "title": "Flam Virtual Drum",
                "fullscreen": false,
                "resizable": true,
                "visible": false,
                "minHeight": 600,
                "minWidth": 800,
                "height": 600,
                "width": 800
            },
            {
                "label": "splashscreen",
                "url": "splashscreen.html",
                "decorations": false,
                "height": 340,
                "width": 600
            }
        ]
    }
}
